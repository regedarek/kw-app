# Kamal Registry (Docker Hub)
KAMAL_REGISTRY_USERNAME=your_dockerhub_username
KAMAL_REGISTRY_PASSWORD=your_dockerhub_password

# Rails Configuration
RAILS_ENV=staging
RACK_ENV=staging
SECRET_KEY_BASE=generate_with_rails_secret
RAILS_MASTER_KEY=your_rails_master_key

# Database Configuration
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=generate_secure_password
POSTGRES_DB=kw_app_staging
STAGING_DATABASE_NAME=kw_app_staging
STAGING_DATABASE_USERNAME=staging_user
STAGING_DATABASE_PASSWORD=generate_secure_password
STAGING_DATABASE_HOST=kw-app-staging-postgres

# Redis Configuration
REDIS_PASSWORD=generate_secure_redis_password
REDIS_URL_SIDEKIQ=redis://:${REDIS_PASSWORD}@kw-app-staging-redis:6379/1

# Strava Integration
STRAVA_CLIENT=your_strava_client_id
STRAVA_SECRET=your_strava_secret

# Payment Gateway
DOTPAY_PASSWORD=your_dotpay_password

# Email Service (Mailgun)
MAILGUN_LOGIN=your_mailgun_login
MAILGUN_PASSWORD=your_mailgun_password

# OpenStack Storage
USE_CLOUD_STORAGE=false
OPENSTACK_TENANT=your_openstack_tenant
OPENSTACK_USERNAME=your_openstack_username
OPENSTACK_API_KEY=your_openstack_api_key

# Weather API
METEOBLUE_KEY=your_meteoblue_key