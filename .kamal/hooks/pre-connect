#!/usr/bin/env bash
# Pre-connect hook: Runs before Kamal deployment commands
# This is intentionally minimal - all secret management is handled
# by GitHub Actions (CI/CD) or manual exports (local deployments)

set -e

# Skip in CI/CD - GitHub Actions handles everything
if [ -n "$CI" ] || [ -n "$GITHUB_ACTIONS" ]; then
  exit 0
fi

# For local deployments, you can add checks here if needed
# For now, we trust the user has sourced .kamal/env.staging.example

exit 0