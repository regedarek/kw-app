.row
  .large-12.columns
    h3 Giełda Klubowa

.row
  .large-8.columns
    .callout.warning
      | Ogłoszenia drobne klubowiczów
  .large-4.columns
    = link_to "Dodaj ogłoszenie", new_olx_sale_announcement_path, class: "button large expanded"

.row
  .large-12.columns
    .row
      - @sale_announcements.each do |announcement|
        .large-3.columns
          .callout
            .card.card-product
              .card-product-img-wrapper
                = link_to "Zobacz", olx_sale_announcement_path(announcement), class: "button expanded"
                a href="/olx/ogloszenia/#{announcement.id}" 
                  - if announcement.primary_photo
                    = image_tag(announcement.primary_photo.file.medium.url)
                  - else
                    = image_tag("data:image/png;base64,")
              .card-section
                h4.card-product-name = announcement.name
                h5.card-product-price
                  = announcement.user.display_name
                - if announcement.price
                  h5.card-product-price
                    = "#{announcement.price} zł"
