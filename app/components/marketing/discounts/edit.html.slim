.row
  .large-12.columns
    - if @errors
      .callout.alert
        ul.circle
          - @errors.each do |error|
            li= error

= form_for @discount, as: :discount, url: discount_path(@discount.id), method: :put do |f|
  = render 'form', f: f

  .row
    .large-6.columns
      = f.submit 'Zaktualizuj', class: 'button expanded large success'

    .large-6.columns
      = link_to t('.back'), discounts_path, class: 'secondary button large expanded'
