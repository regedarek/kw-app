<% like = current_user.likes.find_by(likeable: likeable) %>

<% if like.nil? %>
  <%=button_to(button_text_like, likes_path,  class:"button success expanded",
  params:{ like: {likeable_id: likeable.id,
  likeable_type: likeable.class.to_s}})%>
<% else %>
  <%=button_to(button_text_unlike, like_path(like),
  class:"button alert expanded",
  method: :delete)%>
<% end %>
