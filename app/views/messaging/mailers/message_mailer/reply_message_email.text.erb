-- ODPOWIEDZ E-MAILOWO POWYŻEJ TEJ LINI --

<% if @message.sender %>
  <%= @message.sender.display_name %> odpowiedział
<% end %>

-----------------------------------------------
<%= @message.body.html_safe? ? @message.body : strip_tags(@message.body) %>
-----------------------------------------------

<% if @message.conversation.sign_ups.any? %>
  <small>
    Kliknij aby przejść bezpośrednio do <%= link_to 'QA z koordynatorem', business_sign_up_url(@message.conversation.sign_ups.first.id, code: @message.conversation.sign_ups.first.code) %>.
  </small>
  </br>
<% else %>
  <small>
    Kliknij aby przejść bezpośrednio do <%= link_to 'wątku', conversation_url(@message.conversation.id) %> aby odpowiedzieć i sprawdzić inne wiadomości.
  </small>
  </br>
<% end %>
